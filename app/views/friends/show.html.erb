
<div class="card m-auto" style="width: 25rem;">
  <img src="https://images.dog.ceo/breeds/hound-plott/hhh-23456.jpeg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">
      <%= @friend.first_name %> <%= @friend.last_name %>
    </h5>
    <strong>Email:</strong>
    <%= @friend.email %>
    <br/>
    <strong>Phone:</strong>
    <%= @friend.phone %>
    <br/>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
    <br/>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>

  </div>
</div>


